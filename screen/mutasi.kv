                    id: customer_list
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [10, 10]
                    spacing: 10

                    # Data 1
                    BoxLayout:
                        size_hint_y: None
                        height: '80dp'
                        spacing: 10
                        padding: [10, 10]
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # White background for each customer
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            Color:
                                rgba: 0, 0, 0, 1  # Black border color
                            Line:
                                rectangle: (self.x, self.y, self.width, self.height)
                                width: 1

                        # Customer image (placeholder)
                        Image:
                            source: 'assets/uang_masuk.png'  # Change with actual image
                            size_hint_x: None
                            width: '50dp'

                        # Customer details (name and phone number)
                        BoxLayout:
                            orientation: 'vertical'
                            Label:
                                text: '200.000'
                                font_size: '18sp'
                                color: 'green'
                                # color: 0, 0, 0, 1  # Black text
                                halign: 'left'
                                valign: 'middle'
                                text_size: self.size  # Makes the text align to the left

#:kivy 2.3.0
<MutasiPage>:
    name: 'mutasi'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            size_hint: 1, 0.15
            spacing: 10
            BoxLayout:
                size_hint: 1, 0.7
                canvas.before:
                    Color:
                        rgba: 0.6, 0.8, 1, 1  # Blue background color
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Button:
                    text: "<"
                    size_hint_x: 0.15
                    background_color: 0.6, 0.8, 1, 1  # Makes the button blue
                    color: 1, 1, 1, 1  # White text
                    bold: True
                    font_size: 15
                    on_release: root.manager.current=('home')

                Label:
                    text: "MUTASI KAS"
                    font_size: '20sp'
                    bold: True
                    color: 0, 0, 0, 1  # Black text color
                    halign: 'center'
                    valign: 'middle'
                    size_hint_x: 1
                    text_size: self.size
                    
            BoxLayout:
                size_hint: 1, 0.3
                spacing: 2

                TextInput:
                    id: search_input
                    hint_text: "Cari Data"
                    size_hint_x: 0.5
                    multiline: False

                Button:
                    text: "+"
                    size_hint_x: 0.15
                    background_color: 0.6, 0.8, 1, 1  # Makes the button blue
                    color: 1, 1, 1, 1  # White text
                    bold: True
                    font_size: 20
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.8, 1, 1   # Button background color (blue)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]  # Rounded corners
            # BoxLayout:
            #     orientation:'vertical'

#:kivy 2.3.0
<SelesaiPage>:
    name: 'selesai'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            size_hint: 1, 0.15
            spacing: 10
            BoxLayout:
                size_hint: 1, 0.7
                canvas.before:
                    Color:
                        rgba: 0.6, 0.8, 1, 1  # Blue background color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "PESANAN"
                    font_size: '20sp'
                    bold: True
                    color: 0, 0, 0, 1  # Black text color
                    halign: 'center'
                    valign: 'middle'
                    size_hint_x: 1
                    text_size: self.size
            
            BoxLayout:
                size_hint: 1, 0.3
                spacing: 10

                TextInput:
                    id: search_input
                    hint_text: "Cari Nama"
                    size_hint_x: 0.5
                    multiline: False

                Button:
                    text: "+"
                    size_hint_x: 0.15
                    background_color: 0.6, 0.8, 1, 1  # Makes the button blue
                    color: 1, 1, 1, 1  # White text
                    bold: True
                    font_size: 20
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.8, 1, 1   # Button background color (blue)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]  # Rounded corners
   
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.8
            BoxLayout:
                orientation:'vertical'
                GridLayout:
                    id: customer_list
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [10, 10]
                    spacing: 10

                    BoxLayout:
                        size_hint_y: None
                        height: '40dp'
                        padding: [0, 10, 0, 10]
                        Button:
                            text: 'Antrian'
                            size_hint_y: None
                            height: '30dp'
                            on_press:root.manager.current=('antrian')

                        Button:
                            text: 'Siap Ambil'
                            size_hint_y: None
                            height: '30dp'
                            on_press:root.manager.current=('ambil')

                        Button:
                            text: 'Selesai'
                            size_hint_y: None
                            height: '30dp'
                            background_color: 0.6, 0.8, 1, 1  # Makes the button blue
                            color: 1, 1, 1, 1  # White text
                            on_press:root.manager.current=('selesai')


                    ScrollView:
                        size_hint: (1, None)
                        height: '400dp'
                        BoxLayout:
                            id: order_list_layout
                            orientation: 'vertical'
                            size_hint_y: None
                            height: self.minimum_height

                    BoxLayout:
                        size_hint_y: None
                        height: '50dp'
                        padding: 10
                        spacing: 10
                        Button:
                            text: 'Pesanan'
                        Button:
                            text: 'Menu'
                            on_press:root.manager.current=('home')

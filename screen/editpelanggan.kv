#:kivy 2.3.0
<EditPelanggan>:
    name_input: name_input
    nomer_input: nomer_input
    alamat_input: alamat_input
    
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        Label:
            text: 'Edit Pelanggan'
            size_hint_y: None
            height: 50
            font_size: 24
        
        TextInput:
            id: name_input
            hint_text: 'Nama'
            size_hint_y: None
            height: 40
            multiline: False
        
        TextInput:
            id: nomer_input
            hint_text: 'Nomer'
            size_hint_y: None
            height: 40
            multiline: False
            input_filter: 'int'
        
        TextInput:
            id: alamat_input
            hint_text: 'Alamat'
            size_hint_y: None
            height: 40
            multiline: False
        
        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            
            Button:
                text: 'Batal'
                on_press: root.cancel()
            
            Button:
                text: 'Update'
                on_press: root.update_product()